{
    "elements": [
        {
            "type": "RowLayout",
            "items": [
                {
                    "type": "CheckBox",
                    "caption": "Enable cyclic calculation",
                    "name": "CheckIntervall",
                    "onChange": "ViK_UIVisible($id, $CheckIntervall);"
                },
                {
                    "type": "NumberSpinner",
                    "suffix": " Minutes",
                    "caption": "Intervall",
                    "name": "Intervall",
                    "minimum": 0,
                    "visible": false
                }
            ]
        },
        {
            "type": "List",
            "name": "SourceVariables",
            "caption": "Source variables",
            "add": true,
            "delete": true,
            "columns": [
                {
                    "caption": "Source variable",
                    "name": "SourceVariable",
                    "width": "200px",
                    "add": 0,
                    "edit": {
                        "type": "SelectVariable",
                        "requiredLogging": 1
                    }
                },
                {
                    "caption": "Category",
                    "name": "Category",
                    "width": "auto",
                    "add": "",
                    "edit": {
                        "type": "ValidationTextBox"
                    }
                }
            ]
        }
    ],
    "actions": [
        {
            "type":"Button",
            "onClick": "Vik_CalculateConsumption($id);",
            "caption": "Recalculate"
        }
    ],
    "status": [
        {
            "code": 200,
            "icon": "error",
            "caption": "A category is missing"
        },
        {
            "code": 201,
            "icon": "error",
            "caption": "A variable is invalid"
        },
        {
            "code": 202,
            "icon": "error",
            "caption": "The start time ist greater then the end time"
        }
    ]
}